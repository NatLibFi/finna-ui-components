{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    label_display == 'inline' ? 'clearfix',
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}
<div{{ attributes.addClass(classes, 'field__items', 'search-grid') }}>
  {% for item in items %}
    <div{{ item.attributes.addClass('field__item', 'result', 'grid') }}>{{ item.content }}</div>
  {% endfor %}
</div>
