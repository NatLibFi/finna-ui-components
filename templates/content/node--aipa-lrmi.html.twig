{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }} id="encapsulated-record-{{ node.id }}">

  {{ title_prefix }}
  {% if label and not page %}
    <h2{{ title_attributes }}>
      {{ label }}
    </h2>
  {% endif %}
  {{ title_suffix }}

  <div{{ content_attributes.addClass('node__content') }}>
    {{ content.field_authors }}
    {{ content.field_description }}
    <details>
      <summary>Tavoite ja sisältöalue</summary>
      {{ content.field_learning_resources }}
      {{ content.field_educational_levels }}
      {{ content.field_educational_subjects_be }}
      {{ content.field_study_contents_be }}
      {{ content.field_study_objectives_be }}
      {{ content.field_educational_subjects_uss }}
      {{ content.field_study_contents_uss }}
      {{ content.field_study_objectives_uss }}
      {{ content.field_study_objectives_text }}
    </details>
    <details>
      <summary>Tehtäväideat</summary>
      {{ content.field_assignment_ideas }}
    </details>
    {{ content.field_records }}
  </div>

</article>
