{
  "name": "finna-ui-components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NatLibFi/finna-ui-components.git"
  },
  "dependencies": {
    "easymde": "2.16.1"
  },
  "devDependencies": {
    "@pattern-lab/cli": "5.16.2",
    "@pattern-lab/core": "5.16.2",
    "@pattern-lab/uikit-workshop": "5.16.2",
    "browser-sync": "2.27.8",
    "concurrently": "7.0.0",
    "design-token-transformer": "github:NatLibFi/finna-design-tokens",
    "engine-phtml": "github:aleksip/engine-phtml",
    "eslint": "8.5.0",
    "fs-extra": "10.0.0",
    "jquery-mockjax": "2.6.0",
    "jshint": "2.13.4",
    "less": "3.13.1",
    "onchange": "7.1.0",
    "stylelint": "14.3.0",
    "stylelint-config-twbs-bootstrap": "3.0.1"
  },
  "scripts": {
    "build": "npm run vendor-update && npm run build:css && npm run build:pl",
    "build:css": "npm run build:less",
    "build:less": "node scripts/less-build.js",
    "build:pl": "patternlab build --config ./patternlab-config.json",
    "eslint": "eslint --ignore-pattern public/js/vendor --ignore-pattern public/js/styleguide/vendor public/js",
    "eslint-fix": "eslint --fix --ignore-pattern public/js/vendor --ignore-pattern public/js/styleguide/vendor public/js",
    "fix": "npm run fix:js",
    "fix:js": "npm run eslint-fix",
    "jshint": "jshint --config=tests/jshint.json --exclude=public/js/vendor,public/js/styleguide/vendor public/js",
    "lint": "npm run lint:js",
    "lint:js": "npm run eslint && npm run jshint",
    "postinstall": "npm run build",
    "qa": "npm run lint",
    "qa-fix": "npm run fix",
    "serve": "browser-sync start --server 'public' --files 'public' --reload-debounce 2000",
    "vendor-update": "node ./scripts/assets.js",
    "watch": "concurrently 'npm:watch:*' 'npm:serve'",
    "watch:components": "onchange 'source/**/*' -- npm run build:pl",
    "watch:less": "onchange 'assets/less/**/*.less' -- npm run build:less"
  }
}
